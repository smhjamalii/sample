FROM ubuntu:latest
RUN apt-get update
RUN apt-get -y install gcc libc6-dev zlib1g-dev curl bash
RUN curl -L https://github.com/graalvm/graalvm-ce-builds/releases/download/vm-20.0.0/graalvm-ce-java11-linux-amd64-20.0.0.tar.gz -o graalvm-ce-java11-linux-amd64-20.0.0.tar.gz
RUN mkdir /opt/graalvm
RUN tar -zxf ./graalvm-ce-java11-linux-amd64-20.0.0.tar.gz -C /opt/graalvm --strip-components 1
RUN rm graalvm-ce-java11-linux-amd64-20.0.0.tar.gz
ENV GRAALVM_HOME=/opt/graalvm
ENV JAVA_HOME=$GRAALVM_HOME
ENV PATH=$PATH:$JAVA_HOME/bin
RUN gu install native-image
RUN curl https://ftp-stud.hs-esslingen.de/pub/Mirrors/ftp.apache.org/dist/maven/maven-3/3.6.3/binaries/apache-maven-3.6.3-bin.tar.gz -o apache-maven-3.6.3-bin.tar.gz
RUN mkdir /opt/maven
RUN tar -zxf ./apache-maven-3.6.3-bin.tar.gz -C /opt/maven --strip-components 1
RUN rm apache-maven-3.6.3-bin.tar.gz
ENV MAVEN_HOME=/opt/maven
ENV PATH=$PATH:$MAVEN_HOME/bin

